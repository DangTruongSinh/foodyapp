<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_toolbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorDen">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_camera"
            android:text="Tải ảnh"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorDen"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textSize="10sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_location"
            android:backgroundTint="@color/colorDen"
            android:text="check-in"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textSize="10sp"/>
        <Button
            android:id="@+id/btnBinhLuan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_comment"
            android:text="Bình luận"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorDen"
            android:textSize="10sp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_bookmark"
            android:text="Lưu lại"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorDen"
            android:textSize="10sp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_share"
            android:textColor="@color/colorWhite"
            android:text="Share"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorDen"
            android:layout_weight="1"
            android:textSize="10sp"/>
    </LinearLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ViewFlipper
                    android:id="@+id/view_fliper"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                </ViewFlipper>
                <TextView
                    android:id="@+id/txtTenQuanAn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gogi House"
                    android:textSize="25sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:id="@+id/chinhanhquanans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                </LinearLayout>
                <View
                    android:id="@+id/view"
                    android:layout_marginTop="5dp"
                    android:background="@color/backgroundTrangChu"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="0"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Tải Ảnh"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Check-in"
                            android:textAlignment="center"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txtSoBinhLuan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bình luận"
                            android:textAlignment="center"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lưu lại"
                            android:textAlignment="center"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtGio"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="7:00-22:30"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/txtTrangThai"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Chưa mở cửa"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:layout_marginRight="5dp"/>
                </LinearLayout>
                <include layout="@layout/layout_googlemap"></include>
                <View
                    android:background="@color/backgroundTrangChu"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:id="@+id/linear_tienich"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
                <View
                    android:id="@+id/view_raochan"
                    android:background="@color/backgroundTrangChu"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_viewChiTietQuanAn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>
                <TextView
                    android:id="@+id/txtLoadBinhLuan"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:drawableLeft="@drawable/loadbinhluan"
                    android:text="Tai them binh luan"
                    android:drawablePadding="10dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>




</LinearLayout>
