<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtDiemTrungBinhPlace"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="0"
                android:gravity="center"
                android:background="@drawable/custom_backgrounddiem" />
            <LinearLayout

                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtTieuDePlaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thanh Nga - Đặc sản miền trung"
                    android:textSize="15sp"
                    android:paddingBottom="1dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txtDiaChiPlaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:paddingBottom="1dp"
                    android:text="304E Lý thường kiệt, Quận Tân Bình"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/txtSoKmPlace"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="3.8km" />
        </LinearLayout>
        <ImageView
            android:id="@+id/image_viewPlaces"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/hinhtest"
            android:scaleType="centerCrop"
            />
        <Button
            android:id="@+id/btnGiaoHang"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_order"
            android:drawableTop="@drawable/ic_local_shipping_white_24dp"
            android:text="Đặt hàng"
            />
        <LinearLayout
            android:id="@+id/linear_BinhLuanPlace1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_hinhUser1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtTieuDeBinhLuanPlaces1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thanh Nga - Đặc sản miền trung"
                    android:textSize="17sp"
                    android:paddingBottom="1dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txtNoiDungBinhLuanPlaces1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:text="304E Lý thường kiệt, Quận Tân Bình"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txtDiemBinhLuan_Place1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7 diem"
                android:gravity="top"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_BinhLuanPlace2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_hinhUser2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtTieuDeBinhLuanPlaces2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thanh Nga - Đặc sản miền trung"
                    android:textSize="17sp"
                    android:paddingBottom="1dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txtNoiDungBinhLuanPlaces2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:text="304E Lý thường kiệt, Quận Tân Bình"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txtDiemBinhLuan_Place2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8 diem"
                android:gravity="top"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtSoComment_Place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="55"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_insert_comment_black_24dp"
                />
            <TextView
                android:id="@+id/txtSoHinhAnhComment_Places"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="55"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
