<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:src="@drawable/chuf"
            />
        <RadioGroup
            android:id="@+id/rd_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_radio_group"
            >
            <RadioButton
                android:id="@+id/rdb_place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@android:color/transparent"
                android:text="Places"
                android:checked="true"
                android:padding="8dp"
                android:textColor="@drawable/custom_color_place_food"
                android:background="@drawable/custom_radiobutton_place" />
            <RadioButton
                android:id="@+id/rdb_food"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@android:color/transparent"
                android:text="Food"
                android:padding="8dp"
                android:textColor="@drawable/custom_color_place_food"
                android:background="@drawable/custom_radiobutton_food"
                />
        </RadioGroup>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_add_white_24dp"
            android:layout_gravity = "right"
            android:layout_marginRight="10dp"
            />
    </Toolbar>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_papger"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>

</LinearLayout>